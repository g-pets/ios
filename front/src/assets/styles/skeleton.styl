// Flex Model
.flex-column-container
	flex: 1
	min-height: 0
	display: flex
	flex-direction: column
.section-scrolled
	flex: 1
	overflow-y: auto
.section-fixed
	flex: 0


.view
	width: 100%
	height: 100%


.coming-soon
	background: repeating-linear-gradient(90deg, #C5CCD4, #C5CCD4 10px, #CBD2D8 10px, #CBD2D8 11px)
	h2
		margin-top: 3em
		text-align: center
		font-size: 1.6em
		font-weight: bold
		color: #fffffa
		text-shadow: 0px -0.05em 0 rgba(#000,.5)


.glare
	position: relative
	pointer-events: none
	&:before
		content: ''
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 55%
		border-radius: 0 0 50% 50%/0 0 35% 35%
		background: linear-gradient(180deg, rgba(#fff, .6) 0%, rgba(#fff, .2) 100%)

.dark-text-shadow
	text-shadow: 0px -0.05em 0 rgba(#000,.5)

.light-text-shadow
	text-shadow: 0px 0.05em 0 rgba(#fff,.5)


.dark-text__shadow
	text-shadow: 0px 0.05em 0 rgba(#fff,.5)
.light-text__shadow
	text-shadow: 0px -0.05em 0 rgba(#000,.5)



